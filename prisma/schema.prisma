generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  email String @unique

  password String

  name String

  createdAt DateTime @default(now())

  roles Role[] @default([USER])

  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model product {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String @unique

  description String

  price BigInt

  colors String[]

  sizes String[]

  images String[]

  @@map("products")
}
